[user]
   email = raf@arista.com
   name = Rafael Gozlan
[push]
   default = simple
[alias]
   l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
   c = commit -m
   s = status
   p = pull --rebase
   ch = checkout
[core]
   autocrlf = input
   pager = less
[pager]
   status = true

[color]
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
#   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = red
   deleted = red
